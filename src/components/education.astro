---
import EducationSnippet from "./education_snippet.astro";
import UDO from "../assets/UDO.png";
import CISCO from "../assets/CISCO.webp";
---

<div class="w-full">
    <h1 class="text-2xl lg:text-6xl ml-5 lg:ml-15 font-bold mt-20">My Education</h1>

    <div class="mt-5 lg:mt-15 ml-5 lg:pl-20 lg:grid lg:grid-cols-2">
        <EducationSnippet
            title="Universidad de Oriente"
            years="2019 - 2025"
            degree="Computer Science Major"
            description="Graduated with academic honors(GPA 8.61/10)."
            image={UDO.src}
        />

        <EducationSnippet
            title="Cisco Networking Academy"
            years="2022"
            degree="CCNAv7: Introduction to Networks"
            description="As part of a course in Universidad de Oriente."
            image={CISCO.src}
        />
    </div>
</div>
